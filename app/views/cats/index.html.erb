<p id="notice"><%= notice %></p>

<h1>Listing Cats</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Gender</th>
      <th>Spayed slash neutered</th>
      <th>Clawed</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.description %></td>
        <td><%= cat.name %></td>
        <td><%= cat.breed %></td>
        <td><%= cat.gender %></td>
        <td><%= cat.spayed_slash_neutered %></td>
        <td><%= cat.clawed %></td>
        <td><%= cat.color %></td>
        <td><%= link_to 'Show', cat %></td>
        <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
        <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

