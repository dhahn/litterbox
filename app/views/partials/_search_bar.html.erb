<% @search = @search || {} %>
<div class="search-bar">
	<form action="<%= search_show_path %>" method="GET" class="pure-form">
		<input type="text" name="location" class="location" placeholder="Springfield, MO 65806" value="<%= @search[:location] %>" />
		<input type="text" name="start_date" placeholder="11/06/2015" value="<%= @search[:start_date] %>" />
		<input type="text" name="end_date" placeholder="11/07/2015" value="<%= @search[:end_date] %>"/>

		<select name="number_of_cats">
			<option>1 cat</option>
			<option>2 cats</option>
			<option>3 cats</option>
			<option>More cats</option>
		</select>

		<button class="pure-button pure-button-primary">Find a litter box</button>
	</form>
</div>