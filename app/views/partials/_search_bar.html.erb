<div class="search-bar">
	<form action="<%= search_show_path %>" method="GET" class="pure-form">
		<input type="text" name="location" class="location" placeholder="Your location" value="<%= search[:location] %>" />
		<span class="date-wrapper">
			<input type="text" class="start-date" name="start_date" placeholder="11/06/2015" value="<%= search[:start_date] %>" />
		</span>
		<span class="date-wrapper">
			<input type="text" class="end-date" name="end_date" placeholder="11/07/2015" value="<%= search[:end_date] %>"/>
		</span>

		<% radius_options = [['10 miles', 10], ['25 miles', 25], ['50 miles', 50], ['100 miles', 100], ['500 miles (testing only)', 500]] %>
		<%= select_tag(:radius, options_for_select(radius_options, search[:radius].to_i)) %>

		<button class="pure-button pure-button-primary">Find a litter box</button>
	</form>
</div>