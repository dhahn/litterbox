<section class="sec-search">
	<%= render partial: "partials/search_bar", locals: { search: @search } %>
	<input type="hidden" name="search_lat" value="<%= @search_lat %>">
	<input type="hidden" name="search_lng" value="<%= @search_lng %>">
	<div class="map-view" id="map"></div>
	<div class="results">
		<div class="filters">
			Filters Go Here
			<form id="filters">
				<% number_of_cats_options = [['1 cats', 1], ['2 cats', 2], ['3 cats', 3], ['4 cats', 4], ['5 cats', 5]] %>
				<%= select_tag(:number_of_cats, options_for_select(number_of_cats_options, @filters[:number_of_cats].to_i)) %>

				<%= check_box_tag 'kid_friendly', 'yes', @filters[:kid_friendly] %> Kid Friendly?

				<div class="nstSlider" data-range_min="-10" data-range_max="500" data-cur_min="0" data-cur_max="500">
					<div class="bar"></div>
					<div class="leftGrip"></div>
					<div class="rightGrip"></div>
				</div>
				<div class="leftLabel"></div>
				<div class="rightLabel"></div>
			</form>
		</div>
		<div id="search-results"></div>
	</div>

</section>
