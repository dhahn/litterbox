<div class="sidebar">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, :html => {:class => "pure-form"}, url: session_path(resource_name)) do |f| %>

    <fieldset>
      <%= f.label :email, class: "stacked" %>
      <%= f.email_field :email, autofocus: true %>
    </fieldset>

    <fieldset>
      <%= f.label :password, class: "stacked" %>
      <%= f.password_field :password, autocomplete: "off" %>
    </fieldset>

    <% if devise_mapping.rememberable? -%>
      <fieldset>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </fieldset>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "pure-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
