<div class="result-count">
	<%= markers.length %> litter boxes found.
</div>

<ul class="results-list">
	<% markers.forEach(function(marker) { %>
		<% litterbox = marker.litterbox %>
		<li class="single-result" style="background-image: url(http://www.fillmurray.com/400/300);">
			<a href="<%= '/litter_boxes/' + litterbox.id %>">
				<div class="details">
					<div class="name">
						<%= litterbox.address_line_1 %> <!-- FIXME: make this the name -->
					</div>

					<div>
						<%= litterbox.city %>, <%= litterbox.state %> <%= litterbox.zip %>
						(<%= litterbox.distance.toFixed(2) %> miles)
					</div>

					<div class="rating">
						<span class="paw active"></span>
						<span class="paw active"></span>
						<span class="paw active"></span>
						<span class="paw"></span>
						<span class="paw"></span>
						(5 ratings)
					</div>
				</div>
			</a>
		<% }); %>
	</li>
</ul>
